<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WinNotAntialiasedRepro.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls">

    <ScrollView>

        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Style="{StaticResource SubHeadline}"
                Text="Issues Repro SkiaSharp 3.0.0-preview.3.1" />

            <Label
                TextColor="White"
                Text="SKCanvasView" />

            <!--SOFT-->
            <controls:SKCanvasView
                x:Name="CanvasSimple"
                BackgroundColor="Red"
                HeightRequest="250"
                HorizontalOptions="Fill" />

            <Label
                TextColor="White"
                Text="SKGLView" />

            <!--ACCELERATED-->
            <controls:SKGLView
                x:Name="Canvas"
                BackgroundColor="Red"
                HeightRequest="250"
                HorizontalOptions="Fill" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
